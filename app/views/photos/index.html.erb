<h1>All Photos</h1>
<div>
  <a href ="http://localhost:3000/photos/new">Add a new photo</a>
</div>

<% @list_of_photos.each do |photo| %>
<div>
  <img src="<%= photo.source %>">

  <p>
    <%= photo.caption %>
  </p>

  <div>
    <a href ="http://localhost:3000/photos/<%= photo.id %>" class ="btn btn-default btn-block">
      Show Details
    </a>
  </div>
  <div>
    <a href ="http://localhost:3000/photos/<%= photo.id %>/edit" class ="btn btn-default btn-block">
      Edit
    </a>
  </div>
  <div>
    <a href ="http://localhost:3000/delete_photo/<%= photo.id %>" class ="btn btn-default btn-block">
      Delete
    </a>
  </div>
</div>
<% end %>
